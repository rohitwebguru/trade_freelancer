<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="apple-touch-icon" sizes="76x76" href="./assets/img/apple-icon.png">
        <link rel="icon" type="image/png" href="./assets/images/logoIcon/logo.png">
        <title>
        Freelancer Marketing
        </title>
        <link rel="dns-prefetch" href="//fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
        <link href="./assets/css/bootstrap.min.css" rel="stylesheet">
        
        <link href="./assets/css/line-awesome.min.css" rel="stylesheet">
        <!-- Styles -->
        <link href="./assets/css/app.css" rel="stylesheet">
        <link href="./assets/css/all.min.css" rel="stylesheet">
        <link href="./assets/css/custom.css" rel="stylesheet">
    </head>
    <body>
        <%- include('../layouts/sidebar.ejs') %>
        <div class="page-wrapper default-version">
            <div class="body-wrapper-main">
                <div class="bodywrapper__inner">
                    <div class="body-wrapper">
                        <!-- <h4 class="logo-text mb-15">Your Token is Generated</strong></h4> -->
                        <form onsubmit="return false;" id="form" class="cmn-form mt-30">
                            <% if(errormsg){ %>
                            <div class="alert alert-danger" role="alert" id="error"><b><%- errormsg %> :</b> &nbsp;<%- errormsgdesc %></div>
                            <% } else if(code) { %>
                            <div class="alert alert-success" role="alert" id="success" >Your token has been generated.</div>
                            <div class="form-group">
                                <!-- <a href="setting" class="submit-btn mt-25 b-radius--capsule">Return to Setting Page <i class="las la-sign-in-alt"></i></a> -->
                                <h4 class="logo-text mb-15">You will be redirected in <time><strong id="seconds">3</strong> seconds</time>.</h4>
                            </div>
                            <% } %>
                        </form>
                    </div>
                    
                </div><!-- bodywrapper__inner end -->
            </div><!-- body-wrapper end -->
        </div>
        <script src="./assets/js/bootstrap.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
        <script src="./assets/js/app.js"></script>
        <script src="./assets/js/custom.js"></script>
        <script src="./assets/js/login.js"></script>
        <script type="text/javascript">
           var el = document.getElementById('seconds'),
            total = el.innerHTML,
            timeinterval = setInterval(function () {
                total = --total;
                el.textContent = total;
                if (total <= 0) {
                    clearInterval(timeinterval);
                    window.location.href = '/setting';
                }
            }, 3000);
        </script>
    </body>
</html>
