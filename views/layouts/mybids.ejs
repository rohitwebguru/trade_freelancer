<%- include('../layouts/header.ejs') %>

    <div class="body-wrapper">
        <div class="bodywrapper__inner" id="dashboard">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card b-radius--10 ">
                        <div class="card-header p-4">
                            <h2>Interview to invitation</h2>
                        </div>
                        <div class="card-body p-0 my-proposals">
                            <div class="col-sm-12 my-proposal-box p-3">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div class="my-proposal-desc">
                                            <b>Date</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="my-proposal-desc">
                                            <b>Project Id</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="my-proposal-amount">
                                            <b>Invited By</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="my-proposal-amount">
                                            <b>Status</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="my-proposal-amount">
                                            <b>Message</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="my-proposal-amount">
                                            <b>Action</b>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr/>
                            <% for(var i=0; i< invitationdata.length; i++){ %>
                                <div class="col-sm-12 my-proposal-box p-3">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <div class="my-proposal-desc">
                                                <% var date = invitationdata[i].created_at%>
                                                    Initiated
                                                    <%= date.toDateString(); %>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="my-proposal-desc">
                                                <%= invitationdata[i].project_id %>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="my-proposal-amount">
                                                <%= invitationdata[i].username %>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="my-proposal-amount" id="invite_status<%= invitationdata[i].invite_id %>">
                                                <% if(invitationdata[i].status == 0 ) { %>
                                                    Pending
                                                <% } else if(invitationdata[i].status == 1 ) { %>
                                                    Deny
                                                <% } else { %>
                                                    Allow
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="my-proposal-amount">
                                                <%= invitationdata[i].message %>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="my-proposal-amount">
                                                <select name="interview_invitation_Action" id="interview_invitation_Action" data-invite_id="<%= invitationdata[i].invite_id %>" class="form-control mr-2 interview_invitation_Action">
                                                    <option value="">Please Select</option>
                                                    <option value="2">Allow</option>
                                                    <option value="1">Deny</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card b-radius--10 ">
                        <div class="card-header p-4">
                            <h2>My Proposal</h2>
                        </div>
                        <div class="card-body p-0 my-proposals">
                            <div class="col-sm-12 my-proposal-box p-3">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div class="my-proposal-desc">
                                            <b>Date</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-7">
                                        <div class="my-proposal-desc">
                                            <b>Project Name</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="my-proposal-amount">
                                            <b>Budget</b>
                                        </div>
                                    </div>
                                    <div class="col-sm-1">
                                        <div class="my-proposal-amount">
                                            <b>Status</b>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr/>
                            <% for(var i=0; i< bid_projects.length; i++){ %>
                                <div class="col-sm-12 my-proposal-box p-3">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <div class="my-proposal-desc">
                                                <% var date = new Date(bid_projects[i].submitdate *1000)%>
                                                    Initiated
                                                    <%= date.toDateString().substr(4) %>
                                            </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <div class="my-proposal-desc">
                                                <%= bid_projects[i].title %>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="my-proposal-amount">
                                                $
                                                <%= bid_projects[i].budget.minimum %> | $
                                                    <%= bid_projects[i].budget.maximum %>
                                            </div>
                                        </div>
                                        <div class="col-sm-1">
                                            <div class="my-proposal-amount">
                                                <%= bid_projects[i].status %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card b-radius--10 ">
                        <div class="card-header p-4">
                            <h2>Active Proposals</h2>
                        </div>
                        <div class="col-sm-12 my-proposal-box p-3">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="my-proposal-desc">
                                        <b>Date</b>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="my-proposal-desc">
                                        <b>Project Id</b>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="my-proposal-amount">
                                        <b>Amount</b>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="my-proposal-amount">
                                        <b>Status</b>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr/>
                        <div class="card-body p-0 my-proposals">
                            <% for(var i=0; i< active_bid_result.length; i++){ %>
                                <div class="col-sm-12 my-proposal-box p-3">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="my-proposal-desc">
                                                <% var date = new Date(active_bid_result[i].bidPlacedDate *1000)%>
                                                    Initiated
                                                    <%= date.toDateString().substr(4) %>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="my-proposal-desc">
                                                <%= active_bid_result[i].projectId %>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="my-proposal-amount">
                                                $
                                                <%= active_bid_result[i].bidAmount %>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="my-proposal-amount">
                                                <%= active_bid_result[i].bidStatus %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layouts/footer.ejs') %>