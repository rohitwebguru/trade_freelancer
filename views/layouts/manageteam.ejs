<%- include('../layouts/header.ejs') %>
    <div class="body-wrapper">
        <div class="bodywrapper__inner">
            <div class="row">
                <div class="col-lg-3">
                    <button class="btn btn-sm btn--primary box--shadow1 text--small addBtn mt-1" data-toggle="modal" data-target="#addnewteammember">Add New Member</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mt-3">
                <div class="card b-radius--10 ">
                    <div class="card-body p-0">
                        <div class="table-responsive--md  table-responsive">
                            <table class="table table--light style--two">
                                <thead>
                                    <tr>
                                        <th>SR NO.</th>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="manage-project-table">
                                    <% 
                                    if(result.length > 0) { 
                                        for(var i=0; i < result.length; i++) { %>
                                        <tr style="cursor: pointer;">
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <%= result[i].username %>
                                            </td>
                                            <td data-label="Action">
                                                <a href="/manageteam/delete/<%= result[i].team_id %>" class="icon-btn btn--danger ml-1 SiteDelete"><i class="las la-trash"></i></a>
                                            </td>
                                        </tr>
                                        <% } 
                                        } else { %>
                                            <tr style="cursor: pointer;">
                                                <td>
                                                    No records found!
                                                </td>
                                            </tr>
                                            <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="addnewteammember" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Send invite to new team members</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="sendinvitetonewmembers">
                            <div class="form-group">
                                <label for="newmemberemail">Enter emails</label>
                                <textarea name="newmemberemail" id="newmemberemail" required cols="30" rows="10" class="form-control" placeholder="developkvell@gmail.com developkvell@gmail.com developkvell@gmail.com"></textarea>
                                <span class="text-danger email-error"></span>
                                <span class="text-success scs-msg"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="submit" class="form-control">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layouts/footer.ejs') %>