<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="apple-touch-icon" sizes="76x76" href="<%=baseURL%>/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="<%=baseURL%>/assets/images/logoIcon/logo.png">
    <title>
        Freelancer Marketing
    </title>
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="<%=baseURL%>/assets/css/bootstrap.min.css" rel="stylesheet">

    <link href="<%=baseURL%>/assets/css/line-awesome.min.css" rel="stylesheet">
    <!-- Styles -->
    <link href="<%=baseURL%>/assets/css/app.css" rel="stylesheet">
    <link href="<%=baseURL%>/assets/css/custom.css" rel="stylesheet">
</head>

<body>
    <div class="page-wrapper default-version">
        <div class="body-wrapper-main">
            <div class="bodywrapper__inner">
                <div class="form-area bg_img" data-background="<%=baseURL%>/assets/images/1.jpg">
                    <div class="form-wrapper">
                        <h4 class="logo-text mb-15">Welcome to Freelancer Marketing</strong>
                        </h4>
                        <p>Admin Login to Freelancer Marketing dashboard</p>
                        <form onsubmit="return false;" id="form" class="cmn-form mt-30">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" name="email" class="form-control b-radius--capsule" id="email" value="" placeholder="Enter your username" required>
                                <i class="las la-user input-icon"></i>
                            </div>
                            <input type="hidden" name="token" id="token" value="<%=token%>">
                            <div class="form-group">
                                <label for="pass">Password</label>
                                <input type="password" name="password" class="form-control b-radius--capsule" id="password" placeholder="Enter your password" required>
                                <i class="las la-lock input-icon"></i>
                            </div>
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <a href="/forgot-password" class="text-muted text--small"><i class="las la-lock"></i>Forgot password?</a>
                            </div>
                            <div class="alert alert-danger" role="alert" id="error" style="display:none;"></div>
                            <div class="alert alert-success" role="alert" id="success" style="display:none;"></div>
                            <div class="form-group">
                                <button type="submit" class="submit-btn mt-25 b-radius--capsule">Login <i class="las la-sign-in-alt"></i></button>
                            </div>
                            <div class="form-group">
                                <!-- <a href="/signup" type="submit" class="signup-btn mt-25 b-radius--capsule">Sign up <i class="las la-sign-in-alt"></i></a> -->
                                <a href="/register" class="signup-btn mt-25 b-radius--capsule">Sign up <i class="las la-sign-in-alt"></i></a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- login-area end -->

            </div>
            <!-- bodywrapper__inner end -->
        </div>
        <!-- body-wrapper end -->
    </div>
    <script src="<%=baseURL%>/assets/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
    <script src="<%=baseURL%>/assets/js/app.js"></script>
    <script src="<%=baseURL%>/assets/js/login.js"></script>
</body>

</html>