<%- include('../layouts/header.ejs') %>
    <div class="body-wrapper">
        <div class="bodywrapper__inner">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card b-radius--10 ">
                        <% for(var i=0; i < probifreelancers.length; i++) { %>
                        
                        <div class="card-body p-0" id="probi-all-projects">
                                <div class="project-box p-4">
                                    <div class="project-title mb-3">
                                        <h3>
                                            <%= probifreelancers[i].title %>
                                        </h3>
                                    </div>
                                    <div class="project-description row">
                                        <div class="col-lg-12 mb-3"><p> <%= probifreelancers[i].description %></p></div>
                                        <div class="col-lg-12">
                                            <div class="project-info" style="color: #3c3c3c;display: flex;flex-direction: column;">
                                                <div class="project_type">
                                                    <%= probifreelancers[i].type %> - price
                                                </div>
                                                <div class="posted_on">
                                                    Posted on:
                                                    <% var date = new Date(probifreelancers[i].submitdate *1000)%>
                                                        <%= date.toDateString().substr(4) %>
                                                </div>
                                                <div class="posted_on">
                                                    Budget:
                                                    <%= resultamount[0].amount %>
                                                </div>
                                             </div>
                                             <div class="project-proposal-info">
                                                <% if(user.role_id == 3) { %>
                                                    <div class="project-proposal">
                                                        <a href="/messages" class="btn btn-primary">Send Message</a>    
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card b-radius--10 ">
                        <% var userarr = Object.keys(probifreelancersusers).map((key) => [Number(key), probifreelancersusers[key]]);%>
                        <% userarr.forEach((val,i )=>{ %>
                            <div class="card-body p-0 " id="freelancer-hired-card-details">
                                <div class="freelancer-hiredcard">
                                    <div class="freelancer-hiredcard-header">
                                        <div class="freelancer-hiredprofile p-5">
                                            <div class="freelancer-hiredprofile-img">
                                                <img src="<%= val[1].avatar_cdn %>" alt="" class="freelancer-hiredprofile-img freelancer-profile-img">
                                            </div>
                                            <div class="freelancer-hiredprofile-info pl-2">
                                                <h5>
                                                    <%= val[1].username%>
                                                </h5>
                                                <p>
                                                    <%= val[1].display_name%>
                                                </p>
                                                <p>
                                                    <%= val[1].location.country.name%>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layouts/footer.ejs') %>