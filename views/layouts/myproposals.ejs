<%- include('../layouts/header.ejs') %>

    <div class="body-wrapper">
        <div class="bodywrapper__inner" id="dashboard">
            <div class="row">
                <div class="col-lg-10">
                    <div class="card b-radius--10 ">
                        <div class="card-header p-4">
                            <h2>Submitted Proposals</h2>
                        </div>
                        <div class="card-body p-0 my-proposals">

                            <% var t = Object.keys(projects).map((key) => [Number(key), projects[key]]) %>
                                <% for(var i=0; i< bids.length; i++){ %>
                                    <div class="col-sm-12 my-proposal-box p-3" onclick="OpenProject(<%= t[i][1].id %>)">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <div class="my-proposal-desc">
                                                    <% var date = new Date(bids[i].submitdate *1000)%>
                                                        Initiated
                                                        <%= date.toDateString().substr(4) %>
                                                </div>
                                            </div>
                                            <div class="col-sm-7">
                                                <div class="my-proposal-desc">
                                                    <%= t[i][1].title %>
                                                </div>
                                            </div>
                                            <div class="col-sm-1">
                                                <div class="my-proposal-amount">
                                                    $
                                                    <%= bids[i].amount%>
                                                </div>
                                            </div>
                                            <div class="col-sm-2">
                                                <div class="user-profile">
                                                    <div class="user-icon">
                                                        <% if(user.image == null || user.image == '') { %>
                                                            <img src="<%=baseURL%>/assets/images/avatar.png" alt="" height="40px" width="40px" style="border-radius: 50%;">
                                                            <% } else { %>
                                                                <img src="<%=baseURL%>/avatars/<%= user.image %>" alt="" height="40px" width="40px" style="border-radius: 50%;">
                                                                <% } %>
                                                    </div>
                                                    <div class="user-name ml-2">
                                                        <b>
                                                <%= user.username %>
                                            </b>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layouts/footer.ejs') %>